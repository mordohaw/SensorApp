<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="williammordohay.sensorapp.MenuActivity">

    <Button
        android:id="@+id/button"
        android:onClick="goToListActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="Exercice 1" />

    <Button
        android:id="@+id/button2"
        android:onClick="goToDetectSensorActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="50dp"
        android:text="Exercice 2" />

    <Button
        android:id="@+id/button3"
        android:onClick="goToAccelerometerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="39dp"
        android:text="Exercice 3" />

    <Button
        android:id="@+id/button4"
        android:onClick="goToDirectionActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button3"
        android:layout_marginTop="39dp"
        android:text="Exercice 4" />

    <Button
        android:id="@+id/button5"
        android:onClick="goToShakeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button4"
        android:layout_marginTop="39dp"
        android:text="Exercice 5" />
</RelativeLayout>
